<h1>Eat Da Burger Yo!</h1>

<header class="flex-row">
    <div class="flex-small">
        <img src="./assets/images/BurgerIcon.png" />
    </div>
    <div>
        <h2>Add a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="burger_name">
            </div>

            <div class="form-group">
                <label for="devoured">What is the devoured status of your burger?</label><br>
                <input type="radio" name="devoured" value="1" checked> Yum burger eaten!<br>
                <input type="radio" name="devoured" value="0"> Your burger goes uneaten..
            </div>

            <button type="submit">Add Burger</button>
        </form>
    </div>
</header>

<main class="flex-row">
    <div class="flex-small">
        <h2>Burgers you have gotten tubby off of!</h2>

        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="flex-small">
        <h2>Burgers left undevoured!</h2>

        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</main>